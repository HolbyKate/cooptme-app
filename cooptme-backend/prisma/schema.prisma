generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Role {
  id    Int    @id @default(autoincrement())
  name  String @unique
  users User[] @relation("RoleToUser") // Ajout de la relation nomm√©e
}

model User {
  id            Int      @id @default(autoincrement())
  email         String   @unique
  password      String?
  firstName     String
  lastName      String
  provider      String   @default("email")
  roleId        Int
  photoUrl      String?
  emailVerified Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  role Role @relation("RoleToUser", fields: [roleId], references: [id]) // Relation bidirectionnelle
}

model Profile {
  id        Int     @id @default(autoincrement())
  firstName String
  lastName  String
  url       String
  company   String
  job       String
  category  String?
}

model Contact {
  id        Int    @id @default(autoincrement())
  firstName String
  lastName  String
  url       String
  company   String
  job       String
}
